<div class="level">
  <div class="level-left">
    <div class="level-item">
      <h1 class="title">Customers Missing Email Addresses</h1>
    </div>
  </div>
  <div class="level-right">
    <div class="level-item">
      <div class="buttons">
        <%= link_to "All Customers", root_path, class: "button is-primary" %>
        <%= link_to "View Alphabetized", customers_alphabetized_path, class: "button is-info" %>
      </div>
    </div>
  </div>
</div>

<div class="columns is-multiline">
  <% @customers.each do |customer| %>
    <div class="column is-half">
      <%= render 'customer', customer: customer %>
    </div>
  <% end %>
</div>

<% if @customers.empty? %>
  <div class="notification is-success">
    <p>Great! All customers have email addresses.</p>
  </div>
<% end %>