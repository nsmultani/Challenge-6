<div class="level">
  <div class="level-left">
    <div class="level-item">
      <h1 class="title">Customers (Alphabetized)</h1>
    </div>
  </div>
  <div class="level-right">
    <div class="level-item">
      <div class="buttons">
        <%= link_to "All Customers", root_path, class: "button is-primary" %>
        <%= link_to "Missing Email Addresses", customers_missing_email_path, class: "button is-warning" %>
      </div>
    </div>
  </div>
</div>

<div class="columns is-multiline">
  <% @customers.each do |customer| %>
    <div class="column is-half">
      <%= render 'customer', customer: customer %>
    </div>
  <% end %>
</div>

<% if @customers.empty? %>
  <div class="notification is-info">
    <p>No customers found. <%= link_to "Add some customers", admin_customers_path %> using the admin interface.</p>
  </div>
<% end %>